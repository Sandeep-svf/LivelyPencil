<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.TopMenu.TvFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv_search_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"

        app:layout_constraintHeight_percent="0.05"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHeight_percent="0.7"

            app:layout_constraintHorizontal_bias="0.95"
            android:src="@drawable/search_color"


            ></androidx.appcompat.widget.AppCompatImageView>



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_searchText"

            android:layout_width="0dp"
            android:layout_height="match_parent"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintWidth_percent="0.835"
            app:layout_constraintHorizontal_bias="0"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"

            ></androidx.appcompat.widget.AppCompatEditText>



    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/solo_image"
    android:layout_width="match_parent"
    android:layout_height="0dp"

    android:src="@drawable/ic_launcher_background"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    app:layout_constraintHeight_percent="0.32"
    app:layout_constraintVertical_bias="0.085"

    >

</androidx.appcompat.widget.AppCompatImageView>


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/soloLogoImage"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.2"

        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.9"

        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintVertical_bias="0.399"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0"
            android:text="@string/stream"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/soloStreamName"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHorizontal_bias="0.26"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:hint="Cartoon"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="0.53"
            android:text="@string/page2"
            android:textSize="@dimen/text_size"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/soloPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="0.65"

            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:hint="149k"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintHeight_percent="0.5"

            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintHorizontal_bias="0.73"

            android:src="@drawable/comment_icon"
            android:tint="@color/settingEditBackgroundColor"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            ></androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/soloComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="0.83"

            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:hint="149k"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintHeight_percent="0.6"

            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintHorizontal_bias="0.89"

            android:src="@drawable/visibility"
            android:tint="@color/red"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/soloWatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHorizontal_bias="0.99"

            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:hint="149k"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            >

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tv_rcv_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintHeight_percent="0.57"
        app:layout_constraintVertical_bias="1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        >

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>