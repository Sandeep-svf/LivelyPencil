            android:fontFamily="@font/raleway_bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"

            >

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    

