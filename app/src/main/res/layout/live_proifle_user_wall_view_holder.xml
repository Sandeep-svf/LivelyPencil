<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/liveProfileUserWall"
                android:layout_width="60dp"
                android:padding="1dp"
                android:background="@drawable/custom_circle_border"
                android:layout_height="60dp"
                android:src="@drawable/test_profile"></de.hdodenhof.circleimageview.CircleImageView>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/green_circle"></View>
        </RelativeLayout>

    </LinearLayout>


