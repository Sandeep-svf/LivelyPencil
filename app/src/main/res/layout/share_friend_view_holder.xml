<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:weightSum="4.2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileShareFriend"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_circle_border"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:src="@drawable/test_profile">
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/userNameShareFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Julia Martian"
                ></TextView>

            <TextView
                android:id="@+id/userAboutShareFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_below="@+id/userNameShareFriend"
                android:singleLine="true"
                android:text="Writer of (Stream page name)"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp">

            <RelativeLayout
                android:id="@+id/sendShareFriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/jhjh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/jhjh"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Send"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/settingEditBackgroundColor"
                    android:textStyle="bold"
                    tools:ignore="NotSibling"></TextView>

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/jhjh"
                    android:src="@drawable/shareforword"
                    app:tint="@color/settingEditBackgroundColor"></ImageView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>