<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileShareFriendTwo"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_circle_border"
            android:padding="1dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:src="@drawable/demo">
        </de.hdodenhof.circleimageview.CircleImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userNameShareFriendTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Julia Martian"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/userAboutShareFriendTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameShareFriendTwo"
                android:singleLine="true"
                android:text="Writer of (Stream page name)"
                android:textSize="@dimen/text_size"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6">

        <RelativeLayout
            android:id="@+id/dateTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/timeShareFriendTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="22.04.2011"
                android:textSize="14dp">

            </TextView>

            >
            <TextView
                android:id="@+id/dateShareFriendTwo"
                android:textSize="14dp"
                android:layout_below="@+id/timeShareFriendTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="19:00 pm">

            </TextView>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>