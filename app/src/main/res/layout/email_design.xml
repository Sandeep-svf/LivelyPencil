<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkwhite"
    android:layout_height="150dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"

    app:layout_constraintHeight_percent="0.9"
    app:layout_constraintWidth_percent="0.97"

    android:background="@drawable/custom_bg2"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.05"

        app:layout_constraintVertical_bias="0.25"

        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/darkwhite"
        app:civ_border_width="2dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"



        app:layout_constraintVertical_bias="0.2"
app:layout_constraintWidth_percent="0.72"

        android:text="Lively Pencil"
        android:fontFamily="@font/raleway_extrabold"
        android:textSize="@dimen/_18sdp"


        app:layout_constraintHorizontal_bias="0.5"


        >

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

android:singleLine="true"

        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintWidth_percent="0.72"

        android:text="You have new followers on Lively Pencil"
        android:fontFamily="@font/raleway_medium"
        android:textSize="@dimen/_10sdp"


        app:layout_constraintHorizontal_bias="0.5"


        >

    </androidx.appcompat.widget.AppCompatTextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintWidth_percent="0.72"

        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintVertical_bias="0.94"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:text="John deo just started following your activity on Lively Pencil. He is professional web designer............."
            android:fontFamily="@font/raleway_medium"
            android:textSize="@dimen/_10sdp"
            >

        </androidx.appcompat.widget.AppCompatTextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>