<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BottonMenu.NotificationFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:id="@+id/n_clear_all_button"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHeight_percent="0.05"

        app:layout_constraintWidth_percent="0.3"

        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.01"

        android:background="@drawable/border_line_around_notification"
        android:text="@string/clear_all"

        android:textColor="@color/white"


        >

    </androidx.appcompat.widget.AppCompatButton>

<androidx.recyclerview.widget.RecyclerView
    android:layout_marginTop="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:id="@+id/rcv_notification_list"
    android:layout_width="match_parent"
    android:layout_height="0dp"



   app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"



    app:layout_constraintHeight_percent="0.935"


    app:layout_constraintHorizontal_bias="0.95"
    app:layout_constraintVertical_bias="1"

    >

</androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>