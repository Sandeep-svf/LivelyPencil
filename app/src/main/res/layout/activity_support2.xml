<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stream_user_image"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/support_background_2">

    </androidx.appcompat.widget.AppCompatImageView>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.15"

        android:src="@drawable/solo_logo_svg_white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        >

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.07"

      android:text="@string/support"
        android:gravity="center|center|left"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/white"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name_surname"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/raleway_bold"

        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintWidth_percent="0.9">

    </androidx.appcompat.widget.AppCompatTextView>




    <androidx.cardview.widget.CardView
        android:id="@+id/passcode_cardview"
        android:layout_width="0dp"
        app:cardElevation="4dp"
        android:layout_height="40dp"
        android:background="@drawable/border_line_around_edittext"
        app:cardCornerRadius="4dp"

        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintVertical_bias="0.23"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name"

        app:layout_constraintWidth_percent="0.9">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name_surname_edittext"
            android:layout_width="match_parent"
            android:background="@null"
            android:inputType="text"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">

        </androidx.appcompat.widget.AppCompatEditText>

    </androidx.cardview.widget.CardView>

   <androidx.appcompat.widget.AppCompatTextView
       android:layout_width="0dp"
       android:layout_height="wrap_content"


       android:id="@+id/mail_text"
       android:text="@string/mail_address"
       android:textColor="@color/text_color"
       android:textSize="@dimen/_12sdp"
       android:fontFamily="@font/raleway_bold"

       app:layout_constraintWidth_percent="0.9"
       app:layout_constraintHeight_percent="0.06"

       app:layout_constraintVertical_bias="0.288"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"


app:layout_constraintBottom_toBottomOf="parent"       >


   </androidx.appcompat.widget.AppCompatTextView>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_edittext_layout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_text"
        app:layout_constraintVertical_bias="0.335"
        app:layout_constraintHeight_percent="0.05"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_line_around_edittext">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/user_phone_email_edit_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:baselineAligned="false"
                android:inputType="textEmailAddress"
                android:padding="1dp">

            </androidx.appcompat.widget.AppCompatEditText>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/about_what_text"

        android:text="@string/aboout_what"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/raleway_bold"

        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"

        app:layout_constraintVertical_bias="0.39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        >


    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_edittext_layout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_what_text"
        app:layout_constraintVertical_bias="0.54"
        app:layout_constraintHeight_percent="0.18"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_line_around_edittext">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/user_phone_email_edit_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="start"



                android:padding="1dp">

            </androidx.appcompat.widget.AppCompatEditText>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/support_login_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_continue_credentials"
        android:gravity="center"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color"
        android:textSize="@dimen/text_heading"
        android:textStyle="bold"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHorizontal_bias="0.9"

        >

    </androidx.appcompat.widget.AppCompatButton>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attach_file"
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintHeight_percent="0.05"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.1"
        >


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/attach_icon"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintHorizontal_bias="0"
            >

        </androidx.appcompat.widget.AppCompatImageView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"


            android:text="@string/attatchment"
            android:gravity="center_vertical"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/settingEditBackgroundColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintHorizontal_bias="1"

            >

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>