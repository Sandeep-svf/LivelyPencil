<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login.ForgetPasswordActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:gravity="center"

        android:src="@drawable/logo_svg"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"


        android:src="@drawable/recover_icon"

        app:layout_constraintVertical_bias="0.28"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/raleway_bold"
        android:text="@string/recover_password"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/text_color"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/raleway_medium"
        android:text="@string/recover_password_text"
        android:gravity="center|top"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/text_color"
        app:layout_constraintVertical_bias="0.455"

        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.appcompat.widget.AppCompatTextView>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vvvv"
        android:layout_width="0dp"


        android:layout_height="0dp"

        app:layout_constraintVertical_bias="0.54"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.04"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/active_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/with_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                app:layout_constraintWidth_percent="0.4565"

                app:layout_constraintHorizontal_bias="0.1"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/color_desing"
                    >



                </androidx.appcompat.widget.AppCompatImageView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/with_email_green_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/with_email"
                    android:gravity="center"
                    android:textColor="@color/black"

                    ></androidx.appcompat.widget.AppCompatTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView

                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="@string/with_email"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_color"

                android:visibility="gone"
                app:layout_constraintWidth_percent="0.55"

                app:layout_constraintHorizontal_bias="0"



                android:background="@drawable/forget_password_border_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

            </androidx.appcompat.widget.AppCompatTextView>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/with_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"


                app:layout_constraintWidth_percent="0.465"

                app:layout_constraintHorizontal_bias="0.9"



                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/normal_design"
                    android:scaleType="fitXY"
                    >

                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/with_phone"
                    android:gravity="center"
                    android:textColor="@color/black"

                    ></androidx.appcompat.widget.AppCompatTextView>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_with_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.55"

                android:visibility="gone"

                android:text="@string/with_phone"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/text_color"

                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

            </androidx.appcompat.widget.AppCompatTextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/active_email_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/with_phone2"
                android:layout_width="0dp"
                android:layout_height="match_parent"


                app:layout_constraintWidth_percent="0.465"

                app:layout_constraintHorizontal_bias="0.9"



                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/color_desing"
                    android:scaleType="fitXY"
                    >

                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/with_phone_green_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/with_phone"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:textColor="@color/black"

                    ></androidx.appcompat.widget.AppCompatTextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/with_email2"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                app:layout_constraintWidth_percent="0.4565"

                app:layout_constraintHorizontal_bias="0.1"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"

                    android:src="@drawable/normal_design"
                    >



                </androidx.appcompat.widget.AppCompatImageView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/with_email"
                    android:gravity="center"
                    android:textColor="@color/black"

                    ></androidx.appcompat.widget.AppCompatTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vvvv"


        app:layout_constraintHeight_percent="0.05"
        android:background="@drawable/custom_border2"
        app:layout_constraintWidth_percent="0.9"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/email_edittext222"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/mail_icons"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_edittext"
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:fontFamily="@font/raleway_medium"
            android:textSize="@dimen/_12sdp"
            android:hint="@string/enter_account_mail_address"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="5dp"
            android:background="@null"

            >

        </androidx.appcompat.widget.AppCompatEditText>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/phone_edittext"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            android:weightSum="10"

            >



            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                >

            </com.hbb20.CountryCodePicker>

            <View
                android:layout_width="0dp"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".05"
                android:layout_height="match_parent"
                android:background="@color/border_line_color"
                >

            </View>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/user_phone_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.4"
                android:maxLength="10"
                android:background="@null"
                android:inputType="number"
                android:fontFamily="@font/raleway_medium"
                android:textSize="@dimen/_12sdp"
                android:textColorHint="@color/hint_color"
                android:layout_marginLeft="5dp"
                android:hint="@string/forgot_password_hint"
                >

            </androidx.appcompat.widget.AppCompatEditText>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:weightSum="10"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vvvv"


        app:layout_constraintHeight_percent="0.05"
        android:background="@drawable/custom_border2"
        app:layout_constraintWidth_percent="0.9">

        <com.hbb20.CountryCodePicker
            android:id="@+id/country_code_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            app:ccp_autoDetectCountry="true"
            >

        </com.hbb20.CountryCodePicker>

        <View
            android:layout_width="0dp"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".05"
            android:layout_height="match_parent"
            android:background="@color/border_line_color"
            >

        </View>


        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.4"
            android:background="@null"
            android:inputType="number"
            android:fontFamily="@font/raleway_medium"
            android:textSize="@dimen/_12sdp"
            android:textColorHint="@color/hint_color"
            android:layout_marginLeft="5dp"
            android:hint="@string/forgot_password_hint"
            >

        </androidx.appcompat.widget.AppCompatEditText>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_continue_credentials"
        android:gravity="center"
        android:text="@string/request_code"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_extrabold"
        android:textColor="@drawable/text_color"
        android:textSize="@dimen/text_heading"
        android:textStyle="bold"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68"
        app:layout_constraintWidth_percent="0.4"

        >

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:textSize="@dimen/_18sdp"
        android:textColor="@color/text_color"
        android:text="@string/login"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.79"

        app:layout_constraintHeight_percent="0.05"

        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/joinus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:textSize="@dimen/_18sdp"
        android:textColor="@color/text_color"
        android:text="@string/join_us"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.85"

        app:layout_constraintHeight_percent="0.05"

        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/help_pages"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:textSize="@dimen/_18sdp"
        android:textColor="@color/text_color"
        android:text="@string/help_page"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.91"

        app:layout_constraintHeight_percent="0.05"

        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:textSize="@dimen/_18sdp"
        android:textColor="@color/text_color"
        android:text="@string/support"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.97"

        app:layout_constraintHeight_percent="0.05"

        ></androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>